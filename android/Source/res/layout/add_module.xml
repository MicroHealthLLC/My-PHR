<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >


<RelativeLayout
    android:id="@+id/hader"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="@drawable/bluetopbck" >

   
   <Button
        android:id="@+id/back_btn"
        android:layout_width="80dip"
        android:layout_height="37dip"
        android:layout_alignLeft="@+id/edit_modulebtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/edit_modulebtn"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bluebtn"
        android:visibility="visible" />

   <TextView
       android:id="@+id/txtaddmodule"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerVertical="true"
       android:layout_marginLeft="60dp"
       android:layout_toRightOf="@+id/back_btn"
       android:text="Modules"
       android:textColor="#ffffff"
       android:textSize="20sp"
       android:textStyle="bold" />

</RelativeLayout>

<ListView
    android:id="@+id/listaddmodule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="#ffffff"
    >
</ListView>
    
</LinearLayout>